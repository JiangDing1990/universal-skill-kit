{
  "name": "@jiangding/usk-builder",
  "version": "0.1.0",
  "description": "Build system for Universal Skill Kit",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@jiangding/usk-core": "workspace:*",
    "@jiangding/usk-template": "workspace:*",
    "@jiangding/usk-utils": "workspace:*",
    "chokidar": "^3.5.3",
    "tsx": "^4.21.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "builder",
    "build-system"
  ],
  "author": "USK Team",
  "license": "MIT"
}
