{
  "name": "@jiangding/usk-core",
  "version": "0.1.0",
  "description": "Core conversion engine for Universal Skill Kit",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JiangDing1990/universal-skill-kit.git",
    "directory": "packages/core"
  },
  "homepage": "https://github.com/JiangDing1990/universal-skill-kit#readme",
  "bugs": {
    "url": "https://github.com/JiangDing1990/universal-skill-kit/issues"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@jiangding/usk-utils": "workspace:*",
    "gray-matter": "^4.0.3",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "skill",
    "converter",
    "parser",
    "validator",
    "claude-code",
    "codex",
    "ai-cli",
    "typescript",
    "analyzer",
    "compressor"
  ],
  "author": "USK Team",
  "license": "MIT"
}
