{
  "name": "@usk/utils",
  "version": "0.1.0",
  "description": "Utility functions for Universal Skill Kit",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JiangDing1990/universal-skill-kit.git",
    "directory": "packages/utils"
  },
  "homepage": "https://github.com/JiangDing1990/universal-skill-kit#readme",
  "bugs": {
    "url": "https://github.com/JiangDing1990/universal-skill-kit/issues"
  },
