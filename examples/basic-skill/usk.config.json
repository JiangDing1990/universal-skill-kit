{
  "name": "basic-skill-example",
  "version": "1.0.0",
  "author": "USK Team",
  "description": "A basic skill example demonstrating Universal Skill Kit",
  "tags": ["example", "basic", "demo"],
  "platforms": {
    "claude": {
      "enabled": true,
      "output": "dist/claude"
    },
    "codex": {
      "enabled": true,
      "output": "dist/codex"
    }
  },
  "source": {
